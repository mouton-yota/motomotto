<h3><%= @user.email %></h3>

<% if user_signed_in? && current_user != @user %>
  <% if current_user.active_relationships.exists?(target_user_id: @user.id) %>
    <%= link_to "unfollow", [@user, :relationship], method: :delete %>
  <% else %>
    <%= link_to  "follow", [@user, :relationship], method: :post %>
  <% end %>
<% end %>

<div>
  <%= link_to "followings", [@user, :followings] %>
</div>
<div>
  <%= link_to "followers", [@user, :followers] %>
</div>
<div>
  <%= link_to "likes", [@user, :likes] %>
</div>


<% @user.posts.each do |post| %>
  <div>
    <p><%= post.caption %></p>
    <%= image_tag post.image %>
  </div>
<% end %>